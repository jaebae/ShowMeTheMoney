<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="Balanced trade">

        <SwitchPreference
            android:defaultValue="true"
            android:key="enableBalanced"
            android:title="enable" />
        <EditTextPreference
            android:title="sell diff"
            android:editable="true"
            android:defaultValue="3.0"
            android:inputType="numberDecimal"
            android:key="sellValue"
            ></EditTextPreference>
        <EditTextPreference
            android:title="buy diff"
            android:editable="true"
            android:defaultValue="3.0"
            android:inputType="numberDecimal"
            android:key="buyValue"
            ></EditTextPreference>
    </PreferenceCategory>
    <PreferenceCategory android:title="Cutoff trade">
        <SwitchPreference
            android:defaultValue="false"
            android:key="enableCutoff"
            android:title="enable" />
        <EditTextPreference
            android:title="High cut"
            android:editable="true"
            android:defaultValue="110000"
            android:inputType="numberDecimal"
            android:key="HighCut"></EditTextPreference>
        <EditTextPreference
            android:title="Low cut"
            android:editable="true"
            android:defaultValue="110000"
            android:inputType="numberDecimal"
            android:key="LowCut"
            ></EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Money Keeper">
        <SwitchPreference
            android:defaultValue="false"
            android:key="enableMoneyKeeper"
            android:title="enable" />
        <EditTextPreference
            android:title="request to keep"
            android:editable="true"
            android:defaultValue="0"
            android:inputType="numberDecimal"
            android:key="KeepValue"
            ></EditTextPreference>
    </PreferenceCategory>
</PreferenceScreen>